{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ImageViewer.GatewayService": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "Services": {
      "AuthService": "http://localhost:5001",
      "ImageService": "http://localhost:5002",
      "ShareService": "http://localhost:5003",
      "NotificationService": "http://localhost:5004"
    },
    "Jwt": {
      "SecretKey": "your-super-secret-key-for-jwt-token-signing-must-be-at-least-256-bits",
      "Issuer": "ImageViewer.AuthService",
      "Audience": "ImageViewer.Client"
    },
    "Cors": {
      "AllowedOrigins": [ "http://localhost:3000", "https://localhost:3000" ],
      "AllowAnyOrigin": false,
      "AllowAnyHeader": true,
      "AllowAnyMethod": true,
      "AllowCredentials": true
    },
    "Retry": {
      "MaxRetryAttempts": 3,
      "BaseDelaySeconds": 1.0,
      "TimeoutSeconds": 30,
      "CircuitBreakerFailureThreshold": 5,
      "CircuitBreakerRecoveryTimeSeconds": 60
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "ImageViewer.GatewayService": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/gateway-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
