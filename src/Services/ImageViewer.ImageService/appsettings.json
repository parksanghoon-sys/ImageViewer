{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "Type": "InMemory",
    "ConnectionStrings": {
      "PostgreSQL": "Host=localhost;Port=5432;Database=ImageViewerDB;Username=postgres;Password=your_password_here",
      "InMemory": "ImageViewer_ImageService_InMemory"
    }
  },
  "Jwt": {
    "SecretKey": "ImageViewer-SuperSecretJwtKey-256bits-ChangeInProduction-12345678901234567890123456789012",
    "Issuer": "ImageViewer.AuthService",
    "Audience": "ImageViewer.Client",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "ImageStorage": {
    "Path": "Storage/Images",
    "MaxFileSizeBytes": 10485760,
    "ThumbnailSize": 200,
    "BlurRadius": 10.0,
    "SupportedFormats": [".jpg", ".jpeg", ".png", ".gif", ".bmp", ".webp"]
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "Port": "5672",
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ExchangeName": "imageviewer.events"
  }
}
